{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block content %}
	<div class="w-50 mx-auto justify-content-center p-4 align-items-center h-100 border-1 border-secondary rounded shadow-sm bg-white mg-products-content pt-md-5">

		{% for flash_error in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		<h1 class="text-primary text-center">Register</h1>

		{{ form_errors(registrationForm) }}
		{{ form_start(registrationForm, {'attr': {'novalidate':'novalidate'}}) }}


		<div class="row ">
			<div class="col">
				{{ form_row(registrationForm.email, {'attr': {'class': 'form-control input-sm'}}) }}
			</div>
		</div>
		<div class="row ">
			<div class="col-sm-12 col-md-6 col-lg-6 form-group">
				{{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control input-sm'}}) }}
			</div>
			<div class="col-sm-12 col-md-6 col-lg-6 form-group">
				{{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control input-sm'}}) }}
			</div>
		</div>
		<div class="row ">
			<div class="col-sm-12 col-md-6 col-lg-6 form-group">
				{{ form_row(registrationForm.password.first, {'attr': {'class': 'form-control input-sm'}}) }}


			</div>
			<div class="col-sm-12 col-md-6 col-lg-6 form-group">
				{{ form_row(registrationForm.password.second, {'attr': {'class': 'form-control input-sm'}}) }}

			</div>
		</div>
		<div class="row ">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>
		<div class="row ">
			<div class="col-6">
				<button type="submit" class="btn btn-primary btn-sm w-100">S'inscrire</button>
			</div>
			<div class="col-6">
				<button type="reset" class="btn btn-primary btn-success btn-sm w-100">Annuler</button>

			</div>
		</div>
		{{ form_end(registrationForm) }}
	</div>

{% endblock %}
